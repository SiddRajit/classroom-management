{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true // Still keep strict mode!
  },
  "include": ["src/**/*", "../drizzle.config.js"],
  "exclude": ["node_modules", "dist", "drizzle"]
}
